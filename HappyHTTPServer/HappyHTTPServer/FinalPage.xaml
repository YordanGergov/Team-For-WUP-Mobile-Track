<Page
    x:Class="HappyHTTPServer.FinalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HappyHTTPServer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="GridMain" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Friends who have helped you the most" Grid.Row="0" VerticalAlignment="Center"></TextBlock>
        <ListView
            Grid.Row="1"
            x:Name="FriendsWhoHelped"
            HorizontalAlignment="Center"
            ItemsSource="{Binding}"
            ScrollViewer.IsVerticalRailEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run x:Name="userName" Text="{Binding Name}"/>
                            <Run Text=" Email:"/>
                            <Run Text="{Binding Email}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
